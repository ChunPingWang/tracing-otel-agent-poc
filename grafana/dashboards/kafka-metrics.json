{
  "uid": "kafka-metrics",
  "title": "Kafka Metrics",
  "tags": ["otel", "ecommerce", "kafka"],
  "timezone": "browser",
  "schemaVersion": 39,
  "editable": true,
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Producer Send Rate (messages/s)",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 8
      },
      "datasource": {
        "type": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(kafka_producer_record_send_total[$__rate_interval])) by (service_name, topic)",
          "legendFormat": "{{service_name}} → {{topic}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "fillOpacity": 10,
            "showPoints": "never",
            "spanNulls": false
          }
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        },
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true,
          "calcs": ["mean", "lastNotNull", "max"]
        }
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Consumer Receive Rate (messages/s)",
      "gridPos": {
        "x": 0,
        "y": 9,
        "w": 24,
        "h": 8
      },
      "datasource": {
        "type": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(kafka_consumer_records_consumed_total[$__rate_interval])) by (service_name, topic)",
          "legendFormat": "{{service_name}} ← {{topic}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "fillOpacity": 10,
            "showPoints": "never",
            "spanNulls": false
          }
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        },
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true,
          "calcs": ["mean", "lastNotNull", "max"]
        }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Consumer Lag (max)",
      "gridPos": {
        "x": 0,
        "y": 18,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(kafka_consumer_records_lag_max) by (service_name)",
          "legendFormat": "{{service_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "fillOpacity": 10,
            "showPoints": "never",
            "spanNulls": false
          }
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        },
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true,
          "calcs": ["mean", "lastNotNull", "max"]
        }
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Producer Throughput (bytes/s)",
      "gridPos": {
        "x": 12,
        "y": 18,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus"
      },
      "targets": [
        {
          "expr": "kafka_producer_byte_rate{service_name!=\"\"}",
          "legendFormat": "{{service_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "fillOpacity": 10,
            "showPoints": "never",
            "spanNulls": false
          }
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        },
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true,
          "calcs": ["mean", "lastNotNull", "max"]
        }
      }
    }
  ]
}
